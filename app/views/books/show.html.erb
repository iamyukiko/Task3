<!-- booksのshow 投稿した後に移るページ -->

<main>
<p id="notice"><%= flash[:notice] %></p>
<div class="container">
  <%= render 'books/list3', book:@booknew  %>
  <div class="row">
     <div class="col-md-3">
   <%= render 'books/list', user:@user %>
   <%= render 'books/list2', booknew:@booknew %>
     </div>
       <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table table-hover table-inverse">
        <tbody>
          <tr>
          <td><%= link_to user_path(@book.user.id) do %>
          <%=image_tag @book.user.get_profile_image(100,100) %></br>
          <%= @book.user.name %>
          <% end %>
          </td>
			    <td><%= link_to @book.title, book_path(@book.id) %></td>
		    	<td><%= @book.body %></td>

		    	<% if @book.user == current_user %>
		    	<td><%= link_to  "Edit", edit_book_path(@book.id), class:"btn btn-sm btn-success" %></td>
		    	<td><%= link_to  "Destroy", book_path(@book.id), method: :delete, class:"btn btn-sm btn-danger", "data-confirm"=>"本当に消しますか？"%></td>
          <% else %>
          <td></td>
          <td></td>
          <% end %>
		      </tr>
       </tbody>
      </table>
      </div>
</div>
</div>
</main>