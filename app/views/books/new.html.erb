<h1>New book</h1>
  <%= form_with model: @book do |f| %>


  <div class="field">
    <%= f.label :title %></br>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :opinion %></br>
    <%= f.text_field :body %>
  </div>

    <div class="actions">
    <%= f.submit 'Create Book' %>
    </div>

  <% end %>
