<main>
<p id="notice"><%= flash[:notice] %></p>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>

      <table class="table">
        <tbody>
          <tr></tr>
          <%= image_tag @user.get_profile_image(100,100) %>
          <tr>
          <th>name</th>
          <th><%= current_user.name %></th>
          </tr>
          <tr>
          <th>introduction</th>
          <th><%=current_user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <%= link_to edit_user_path(current_user.id), class:"btn btn-outline-secondary btn-block" do %>
         <i class="fas fa-user-cog"></i>
        <% end %>
      </div>

      <h2 class="mt-3">New book</h2>
      <%= form_with model: @book do |f| %>
      <div class="form-group">
        <%= f.label :title %></br>
        <%= f.text_field :title %>
      </div>
      <div class="form-group">
        <%= f.label :opinion %></br>
        <%= f.text_field :body %>
      </div>
      <div class="form-group">
        <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book">
      </div>
      <% end %>
      </div>
      
       <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <% @books.each do |book| %>
        <tbody>
          <tr>
          <td><%= link_to user_path(book.user.id) do %>
          <%=image_tag @user.get_profile_image(100,100) %>
          <% end %>
          </td>
			    <td><%= link_to book.title, edit_book_path(book.id) %></td>
		    	<td><%= book.body %></td>
		    	<td><a class= "btn btn-success" href"">Edit</a></td>
		    	<td><a class= "btn btn-sm btn-danger" hre"">Destroy</a></td>
		    <% end %>
		      </tr>
       </tbody>
      </table>
     </div>
    </div>
  </main>