<main>
<p id="notice"><%= flash[:notice] %></p>
<div class="container">
<div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>User info</h2>
    <div id="error_explanation">
      <% if @user.errors.any? %>
      <%= @user.errors.count %>error prohibited this obj from being saved:
    <ul>
      <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
    <% end %>
    </div>

    <%= form_with model: @user do |f| %>
        <div class="form-group">
          <%= f.label :name %></br>
          <%= f.text_field :name %>
        </div>
        <div class="form-group">
        <%= f.label :image %></br>
        <%= f.file_field :profile_image, accept: "image/*" %>
        </div>
        <div class="form-group">
        <%= f.label :introduction %></br>
        <%= f.text_field :introduction %>
        </div>
        <div class="form-group">
        <input type="submit" name="commit" value="Update User" class="btn btn-secondary" data-disable-with="Update User">
    <% end %>
      </div>
    </div>
</div>
</div>
</main>