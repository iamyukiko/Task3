<main>
<p id="notice"><%= flash[:notice] %></p>
<div class="container">
  <%= render 'books/list3', book:@booknew%>
  <div class="row">
     <div class="col-md-3">
   <%= render 'books/list', user:@user, book:@booknew%>
   <%= render 'books/list2', booknew:@booknew %>
     </div>
       <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <% @users.each do |user| %>
        <tbody>
          <tr>
          <td><%=image_tag user.get_profile_image(80,80) %></td>
          <td><%= user.name %></td>
			    <td><%= link_to 'Show', user_path(user.id) %></td>
		      </tr>
       </tbody>
       <% end %>
      </table>
    </div>
  </div>
</div>
</main>